<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:actionOverflowMenuStyle">@style/ActionButton.Overflow.ZhiHu</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Overflow.ZhiHu</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>


    <style name="ActionButton.Overflow.ZhiHu" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="android:color">@color/white</item>
    </style>

</resources>
